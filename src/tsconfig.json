{
	"compilerOptions":
	{
		"target": "es5",
		"module": "commonjs",
		"moduleResolution": "node",
		"sourceMap": true,
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true,
	    "removeComments": true,
		"skipLibCheck": true,
		"lib": ["es2015", "dom"],
		"noImplicitAny": true,
		"suppressImplicitAnyIndexErrors": true,
		"outDir": "../dist/out-tsc",
		"typeRoots":
		[
			"../node_modules/@types"
		]
	},
	"exclude": [
		"node_modules"
	],
	"awesomeTypescriptLoaderOptions": {
		"useWebpackText": true
	},
	"compileOnSave": false,
	"buildOnSave": false
}